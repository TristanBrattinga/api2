<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th></th>
                <th data-sort="market_cap_rank">#</th>
                <th>
                    <a href="">
                        Name
                    </a>
                </th>
                <th>
                    <a href="">
                        Price
                    </a>
                </th>
                <th>1h %</th>
                <th>24h %</th>
                <th>7d %</th>
                <th>
                    <a href="">
                        Market Cap
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for coin in coins %}
            <tr
                    data-coin-id="{{ coin.id }}"
            >
                <td>
                    <form method="POST" action="/favorite">
                        <button aria-label="Favorite coin" class="favorite-button" name="coinId" value="{{ coin.id }}">
                            {% if favorites contains coin.id %}
                                {% include 'server/icons/star-filled.svg.liquid' %}
                            {% else %}
                                {% include 'server/icons/star.svg.liquid' %}
                            {% endif %}
                        </button>
                    </form>
                </td>
                <td><p>{{ coin.market_cap_rank }}</p></td>
                <td>
                    <a href="/coin/{{ coin.id }}">
                        <img class="coin-logo" src="{{ coin.image }}" alt="{{ coin.name }} logo" width="20" />
                        <p>{{ coin.name }}</p>
                        <span class="coin-symbol">{{ coin.symbol }}</span>
                    </a>
                </td>
                <td><p id="price-{{ coin.id }}">{{ coin.formatted_price }}</p></td>
                <td>
                    <p data-direction="{{ coin.percentage_1h.direction }}">
                        {% if coin.percentage_1h.direction == 'up' %}
                            <svg width="12" height="12" viewBox="0 0 32 32" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="margin-right: 0.25rem; vertical-align: middle;">
